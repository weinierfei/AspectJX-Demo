<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.hujiang.library.demo"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION"/>


    <application
        android:name="com.hujiang.library.demo.DemoApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name="com.hujiang.library.demo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.hujiang.library.demo.FragmentActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.hujiang.library.demo.ButtonActivity"/>

        <activity android:name="com.hujiang.library.demo.AOPActivity"/>

        <activity
            android:name="com.hujiang.library.demo.VideoPlayActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
        />
        <!--<activity android:name="com.hujiang.account.app.LoginActivity"/>-->
    </application>

</manifest>
